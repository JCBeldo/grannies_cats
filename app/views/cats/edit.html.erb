<h1 style="background-color:orange;"><center>Update <%= "#{@cat.name}"%></h1>

<center><%= form_with url: "/cats/#{@cat.id}", method: :patch, local: true do |form| %>
  <%= form.label :spayed_neutered, "Spayed or Neutered", style: "font-size:17px;" %>
  <%= form.check_box :spayed_neutered %>
  <%= form.label :lives %>
  <%= form.text_field :lives %>
  <%= form.hidden_field :cat_id, value: @cat.id %>
  <%= form.hidden_field :name, value: @cat.name %>

  <%= form.submit "Update Cat" %>
<% end %>