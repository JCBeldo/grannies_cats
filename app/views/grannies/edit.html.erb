<h1 style="background-color:orange;"><center>Update This Granny</h1>

<center><%= form_with url: "/grannies/#{@granny.id}", method: :patch, local: true do |form| %>
 
  <%= form.label :has_treats, style: "font-size:18px;" %>
  <%= form.check_box :has_treats %>
  <%= form.label :age %>
  <%= form.text_field :age %>
  <%= form.hidden_field :granny_id, value: @granny.id %>

  <%= form.submit "Update" %>
<% end %>